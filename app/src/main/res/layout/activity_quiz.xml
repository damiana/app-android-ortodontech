<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >


    <ImageView
        android:id="@+id/img_quiz"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/ic_bg_quiz" />

    <TextView
        android:id="@+id/txtPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="texto da pergunta"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnAlternativa_a"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="190dp"
        android:layout_marginLeft="48dp"
        android:drawableLeft="@drawable/alternativa_a"
        android:text="Button" />

    <Button
        android:id="@+id/btnAlternativa_b"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnAlternativa_a"
        android:layout_marginBottom="110dp"
        android:drawableLeft="@drawable/alternativa_b"
        android:text="Button" />

    <Button
        android:id="@+id/btnAlternativa_c"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnAlternativa_a"
        android:layout_marginBottom="24dp"
        android:drawableLeft="@drawable/alternativa_c"
        android:text="Button" />


</RelativeLayout>
